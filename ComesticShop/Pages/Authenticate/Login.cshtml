@page
@model ComesticShop.Pages.Authenticate.LoginModel
@{
    Layout = "";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<section class="vh-100" style="background-color: #9A616D; font-family: 'Quicksand', sans-serif;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://images.unsplash.com/photo-1596462502278-27bfdc403348?ixlib=rb-4.0.3&w=1080&fit=max&q=80&fm=jpg&crop=entropy&cs=tinysrgb"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height: 578px; width: 385px" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                @if (ViewBag.ErrorMessage != null)
                                {
                                    <div class="alert alert-danger text-center" role="alert">
                                        @ViewBag.ErrorMessage
                                    </div>
                                }
                                <form method="post" asp-page="Login">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">Sign into your account</span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="email" id="form2Example17" class="form-control form-control-lg" asp-for="Email" required
                                               style="border: 1px solid black" />
                                        <label class="form-label" for="form2Example17">Email address</label>
                                        <br />
                                        <span asp-validation-for="Email" style="color: red"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" id="form2Example27" class="form-control form-control-lg" asp-for="Password" required
                                               style="border: 1px solid black" />
                                        <label class="form-label" for="form2Example27">Password</label>
                                        <br />
                                        <span asp-validation-for="Password" style="color: red"></span>
                                    </div>

                                    <div class="d-flex justify-content-center" style="display: flex; justify-content: space-between">
                                        <button class="btn btn-dark btn-block mb-4" type="submit" style="width: 120px; margin-right: 10px">
                                            Login
                                        </button>
                                        <a asp-page="/Index" class="btn btn-dark btn-block mb-4" style="width: 120px">
                                            Visit shop
                                        </a>
                                    </div>
                                    <p class="mb-3 pb-lg-2" style="color: #393f81;">
                                        Don't have an account? <a asp-page="/Authenticate/SignUp"
                                                                  style="color: blue; text-decoration: none">Sign up here</a>
                                    </p>
                                    
                                </form>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>