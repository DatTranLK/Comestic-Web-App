@page
@model ComesticShop.Pages.Authenticate.SignUpModel
@{
    Layout = "";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<!-- Section: Design Block -->
<!-- Section: Design Block -->
<section class="background-radial-gradient overflow-hidden" style="font-family: 'Quicksand', sans-serif;">
    <style>
        .background-radial-gradient {
            height: 100%;
            background-color: hsl(218, 41%, 15%);
            background-image: radial-gradient(650px circle at 0% 0%, hsl(218, 41%, 35%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%), radial-gradient(1250px circle at 100% 100%, hsl(218, 41%, 45%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%);
        }

        #radius-shape-1 {
            height: 220px;
            width: 220px;
            top: -60px;
            left: -130px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
        }

        #radius-shape-2 {
            border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
            bottom: -60px;
            right: -110px;
            width: 300px;
            height: 300px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
        }

        .bg-glass {
            background-color: hsla(0, 0%, 100%, 0.9) !important;
            backdrop-filter: saturate(200%) blur(25px);
        }
    </style>

    <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
        <div class="row gx-lg-5 align-items-center mb-5">
            <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                    Shopping at <br />
                    <span style="color: hsl(218, 81%, 75%)">TinaNguyen</span>
                </h1>
                <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
                    Shopping experience with variety, quality and prestige
                </p>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                <div class="card bg-glass">
                    <div class="card-body px-4 py-5 px-md-5">
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger text-center" role="alert">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                        <form method="post" asp-page="SignUp">
                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            <div class="form-outline mb-4">
                                <input type="text" id="form3Example1" class="form-control" style="border: 1px solid black" asp-for="Name" required />
                                <label class="form-label" for="form3Example1">Full name</label>
                                <span asp-validation-for="Name" style="color: red"></span>
                            </div>

                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <input type="email" id="form3Example3" class="form-control" style="border: 1px solid black" asp-for="Email" required />
                                <label class="form-label" for="form3Example3">Email address</label>
                                <span asp-validation-for="Email" style="color: red"></span>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <input type="password" id="form3Example4" class="form-control" style="border: 1px solid black" asp-for="Password" required />
                                <label class="form-label" for="form3Example4">Password</label>
                                <span asp-validation-for="Password" style="color: red"></span>
                            </div>

                            <!-- Submit button -->
                            <div class="d-flex justify-content-center" style="display: flex; justify-content: space-between">
                                <button type="submit" class="btn btn-dark btn-block mb-4" style="width: 120px; margin-right: 10px">
                                    Sign up
                                </button>
                                <a asp-page="/Index" class="btn btn-dark btn-block mb-4" style="width: 120px">
                                    Visit shop
                                </a>
                            </div>

                            <!-- Sign In -->
                            <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                If you have an account? <a asp-page="/Authenticate/Login"
                                                           style="color: blue; text-decoration: none">Sign in here</a>
                            </p>

                            <!-- Register buttons -->
                            @*<div class="text-center">
                                <p>or sign up with:</p>
                                <button type="button" class="btn btn-link btn-floating mx-1">
                                    <i class="fab fa-facebook-f"></i>
                                </button>

                                <button type="button" class="btn btn-link btn-floating mx-1">
                                    <i class="fab fa-google"></i>
                                </button>

                                <button type="button" class="btn btn-link btn-floating mx-1">
                                    <i class="fab fa-twitter"></i>
                                </button>

                                <button type="button" class="btn btn-link btn-floating mx-1">
                                    <i class="fab fa-github"></i>
                                </button>
                            </div>*@
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Section: Design Block -->