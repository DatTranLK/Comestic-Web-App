<!-- single product -->
<div class="single-product mt-150 mb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <!-- IMG Slider -->
                
                    <!-- Carousel wrapper -->
                    <div id="myCarousel" class="carousel slide" data-interval="false">

                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img src="~/ImagesPro/@Model.Product.ImgName1" alt="..." />
                            </div>
                        @if (@Model.Product.ImgName2 != null)
                        {
                            <div class="item">
                                <img src="~/ImagesPro/@Model.Product.ImgName2" alt="..." />
                            </div>
                        }
                        @if (@Model.Product.ImgName3 != null)
                        {
                            <div class="item">
                                <img src="~/ImagesPro/@Model.Product.ImgName3" alt="..." />
                            </div>
                        }
                        @if (@Model.Product.ImgName4 != null)
                        {
                            <div class="item">
                                <img src="~/ImagesPro/@Model.Product.ImgName4" alt="..." />
                            </div>
                        }
                        @if (@Model.Product.ImgName5 != null)
                        {
                            <div class="item">
                                <img src="~/ImagesPro/@Model.Product.ImgName5" alt="..." />
                            </div>
                        }

                            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>

                        <div id="thumbCarousel">
                            <div data-target="#myCarousel" data-slide-to="0" class="thumb active">
                                <img src="~/ImagesPro/@Model.Product.ImgName1" alt="XZ" style="width: 120px; height: 80px; border-radius: 8px" />
                            </div>
                            @if (@Model.Product.ImgName2 != null)
                            {
                                <div data-target="#myCarousel" data-slide-to="1" class="thumb">
                                    <img src="~/ImagesPro/@Model.Product.ImgName2" alt="XZ" style="width: 120px; height: 80px; border-radius: 8px" />
                                </div>
                            }
                            @if (@Model.Product.ImgName3 != null)
                            {
                                <div data-target="#myCarousel" data-slide-to="2" class="thumb">
                                    <img src="~/ImagesPro/@Model.Product.ImgName3" alt="XZ" style="width: 120px; height: 80px; border-radius: 8px" />
                                </div>
                            }
                            @if (@Model.Product.ImgName4 != null)
                            {
                                <div data-target="#myCarousel" data-slide-to="3" class="thumb">
                                    <img src="~/ImagesPro/@Model.Product.ImgName4" alt="XZ" style="width: 120px; height: 80px" />
                                </div>
                            }
                            @if (@Model.Product.ImgName5 != null)
                            {
                                <div data-target="#myCarousel" data-slide-to="4" class="thumb">
                                    <img src="~/ImagesPro/@Model.Product.ImgName5" alt="XZ" style="width: 120px; height: 80px" />
                                </div>
                            }
                        </div>

                    </div>
                
                <!-- IMG Slider -->
            </div>
            <div class="col-md-7">
                <div class="single-product-content">
                    <h3 style="font-family: 'Quicksand', sans-serif;">@Model.Product.Name</h3>
                    <p style="font-family: 'Quicksand', sans-serif;">
                        <strong style="font-family: 'Quicksand', sans-serif;">
                            Thương hiệu:
                            <span class="orange-text" style="font-family: 'Quicksand', sans-serif;">
                                @Model.Product.Brand.Name
                            </span>
                        </strong>
                    </p>
                    <p style="font-family: 'Quicksand', sans-serif;">
                        <strong style="font-family: 'Quicksand', sans-serif;">
                            Categories:
                            <span class="orange-text" style="font-family: 'Quicksand', sans-serif;">
                                @Model.Product.Category.Name
                            </span>
                        </strong>
                    </p>
                    <p class="single-product-pricing" style="font-family: 'Quicksand', sans-serif; font-weight: 500; color: #F28123">
                        @((int)Model.Product.Price) VND
                    </p>
                    <p style="font-family: 'Quicksand', sans-serif;">Summary: @Model.Product.Summary</p>
                    <div class="single-product-form">
                        @*<form action="index.html">
                                <input type="number" placeholder="0">
                          </form>*@
                        @if (@Model.Email != null)
                        {
                            @if (@Model.Product.IsNeedContact == true)
                            {
                                <a asp-page="./Shop" class="cart-btn" style="font-family: 'Quicksand', sans-serif;">
                                    <i class="fas fa-shopping-cart"></i>
                                    Liên hệ cửa hàng
                                </a>
                            }
                            else
