                                </a>
                            }
                            
                        }
                        else
                        {
                            @if (@Model.Product.IsNeedContact == true)
                            {
                                <a asp-page="/Authenticate/Login" class="cart-btn" style="font-family: 'Quicksand', sans-serif;">
                                    <i class="fas fa-shopping-cart"></i>
                                    Liên hệ cửa hàng
                                </a>
                            }
                            else
                            {
                                <a asp-page="/Authenticate/Login" asp-route-id="@Model.Product.Id" class="cart-btn" style="font-family: 'Quicksand', sans-serif;">
                                    <i class="fas fa-shopping-cart"></i>
                                    Add to Cart
                                </a>
                            }
                        }

                    </div>
