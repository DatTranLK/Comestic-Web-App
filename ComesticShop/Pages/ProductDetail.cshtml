            <li><a href=""><i class="fab fa-twitter"></i></a></li>
            <li><a href=""><i class="fab fa-google-plus-g"></i></a></li>
            <li><a href=""><i class="fab fa-linkedin"></i></a></li>
        </ul>*@
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end single product -->
<div class="product-section mt-100 mb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-filters">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".description">Mô tả sản phẩm</li>
                        <li data-filter=".usermanual">Hướng dẫn sử dụng</li>
                        <li data-filter=".element">Thành phần</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row product-lists" id="product-description-section" style="font-size: .875rem; border-bottom: 1px solid #9d691b;">
            <div class="product-detail-description-wrapper description" style="padding: 10px 0; border-top: 1px solid #9d691b;">
                <h2 class="product-detail-information-title" style=" font-family: 'Quicksand', sans-serif;
                        font-size: 14px; font-weight: 600; text-transform: uppercase;">
                    Mô tả sản phẩm
                </h2>
                <div style="font-family: 'Quicksand', sans-serif; font-size: 14px; font-weight: 400; ">
                    @Model.Product.Description
                </div>
            </div>

            <div class="product-user-manual-wrapper usermanual" style="padding: 10px 0; border-top: 1px solid #9d691b;">
                <h2 class="product-detail-information-title" style=" font-family: 'Quicksand', sans-serif;
                        font-size: 14px; font-weight: 600; text-transform: uppercase;">
                    Hướng dẫn sử dụng
                </h2>
                <div style="font-family: 'Quicksand', sans-serif; font-size: 14px; font-weight: 400;">
                    @Model.Product.UserManual
                </div>
            </div>

            <div class="product-user-manual-wrapper element" style="padding: 10px 0; border-top: 1px solid #9d691b;">
                <h2 class="product-detail-information-title" style=" font-family: 'Quicksand', sans-serif;
                        font-size: 14px; font-weight: 600; text-transform: uppercase;">
                    Thành phần
                </h2>
                <div style="font-family: 'Quicksand', sans-serif; font-size: 14px; font-weight: 400;">
                    @Model.Product.Element
                </div>
            </div>
        </div>
    </div>
</div>
