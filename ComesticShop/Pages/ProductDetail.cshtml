                        </div>
                    </div>
                </div>
                <div>
                    <a asp-page="/ProductByCategory" asp-route-id="@Model.Product.CategoryId" class="more-product d-flex justify-content-end" style="font-family: 'Quicksand', sans-serif; font-weight: 400; color: #343a40">
                        See more
                        <span><i style="padding-left: 5px; padding-top: 5px" class="fas fa-angle-right"></i></span>
                    </a>
                </div>
        <div class="row">

            @foreach (var item in Model.RelatedProduct)
            {
                <div class="list-item col-lg-4 col-md-6">
                    <div class="card">

                        <div class="product-images">
                            @if (item.ImgName1 == null)
                            {
                                <p>No content</p>
                            }
                            else
                            {
                                <a asp-page="/ProductDetail" asp-route-id="@item.Id">
                                    <img class="card-img-top" src="~/ImagesPro/@item.ImgName1" alt="">
                                </a>
                            }
                        </div>
                        <div class="card-body" style="width: 100%;">
                            <div class="fs-0">
                                <h5>
                                    <a asp-page="/ProductDetail" asp-route-id="@item.Id" class="text-name text-dark" style="font-size: 17.5px; color: #332D2D;">
                                        @item.Name
                                    </a>
                                </h5>
                                <p class="fs--1 mb-3 text-secondary" style="font-size: 11.66667px; color: #9FA6B2">
                                    @item.Category.Name & @item.Brand.Name
                                </p>
                            </div>
                            <p class="fs-md-2 mb-0 d-flex align-items-center mb-3" style="font-size: 20.16px; color: #F28123">
                                @((int)item.Price) VND
                            </p>
                        </div>
                        <div class="card_footer bg-transparent">
                            @if (@Model.Email != null)
                            {
                                @if (@item.IsNeedContact == true)
                                {
                                    <a asp-page="./Shop" class="cart-btn btn-card" style="font-family: 'Quicksand', sans-serif;">
                                        <i class="fas fa-shopping-cart"></i>
                                        Liên hệ cửa hàng
                                    </a>
                                }
                                else
                                {
                                    <a asp-page="./Cart" asp-route-id="@item.Id" class="cart-btn btn-card" style="font-family: 'Quicksand', sans-serif;">
                                        <i class="fas fa-shopping-cart"></i>
                                        Add to Cart
                                    </a>
                                }

                            }
                            else
                            {
                                @if (@item.IsNeedContact == true)
                                {
                                    <a asp-page="/Authenticate/Login" class="cart-btn btn-card" style="font-family: 'Quicksand', sans-serif;">
                                        <i class="fas fa-shopping-cart"></i>
                                        Liên hệ cửa hàng
                                    </a>
                                }
                                else
                                {
                                    <a asp-page="/Authenticate/Login" asp-route-id="@item.Id" class="cart-btn btn-card" style="font-family: 'Quicksand', sans-serif;">
                                        <i class="fas fa-shopping-cart"></i>
                                        Add to Cart
                                    </a>
                                }
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
            </div>
        </div>
        <!-- end more products -->
<script>
    $(document).ready(function () {

        //carousel-control

        $("#myCarousel").mouseover(function () {
            $("#myCarousel .carousel-control").show();
        });

        $("#myCarousel").mouseleave(function () {
            $("#myCarousel .carousel-control").hide();
        });

        //active thumbnail

        $("#thumbCarousel .thumb").on("click", function () {
            $(this).addClass("active");
            $(this).siblings().removeClass("active");

        });

        //carousel slides

        $('#myCarousel').on('slid.bs.carousel', function () {
            var index = $('.carousel-inner .item.active').index();
            //console.log(index);
            var thumbnailActive = $('#thumbCarousel .thumb[data-slide-to="' + index + '"]');
            thumbnailActive.addClass('active');
            $(thumbnailActive).siblings().removeClass("active");
            //console.log($(thumbnailActive).siblings());
        });
    });
</script>
