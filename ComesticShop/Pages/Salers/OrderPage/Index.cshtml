        crossorigin="anonymous"></script>

<style>
    .nav-pills .nav-link.active {
        background-color: #F28123;
        color: #fff;
        border: 1px solid #F28123;
    }

    .nav-pills .nav-link {
        background-color: #fff;
        color: #F28123;
        border: 1px solid #F28123;
        margin-right: 2rem;
        padding-left: 3rem;
        padding-right: 3rem;
    }
</style>
@if (@Model.Role == "2")
{
    <h1>Order Management</h1>

    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist" style="padding-top: 5px">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pills-all-tab" data-bs-toggle="pill" data-bs-target="#pills-all" type="button" role="tab" aria-controls="pills-all" aria-selected="true">All</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-processing-tab" data-bs-toggle="pill" data-bs-target="#pills-processing" type="button" role="tab" aria-controls="pills-processing" aria-selected="false">Processing</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-accepted-tab" data-bs-toggle="pill" data-bs-target="#pills-accepted" type="button" role="tab" aria-controls="pills-accepted" aria-selected="false">Accepted</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-done-tab" data-bs-toggle="pill" data-bs-target="#pills-done" type="button" role="tab" aria-controls="pills-done" aria-selected="false">Done</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-cancle-tab" data-bs-toggle="pill" data-bs-target="#pills-cancle" type="button" role="tab" aria-controls="pills-cancle" aria-selected="false">Cancle</button>
        </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
        <!-- all status -->
        <div class="tab-pane fade show active" id="pills-all" role="tabpanel" aria-labelledby="pills-all-tab">
            <table class="table" style="background-color: white; border-radius: 10px">
            <thead>
                <tr>
                    <th>
                        TotalPrice
                    </th>
                    <th>
                        CreateDate
                    </th>
                    <th>
                        ShippingAddress
                    </th>
                    <th>
                        OrderStatus
                    </th>
                    <th>
                        Customer
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="list-wrapper">
                @foreach (var item in Model.Order)
                {
                    <tr class="list-item">
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShippingAddress)
                        </td>
                        <td>
                            @if (item.OrderStatus == "Processing")
                            {
                                <div class="badge bg-secondary text-white rounded-pill" style="font-family: 'Quicksand', sans-serif;">@item.OrderStatus</div>
                            }
                            else if (item.OrderStatus == "Accepted")
                            {
                                <div class="badge bg-warning text-white rounded-pill" style="font-family: 'Quicksand', sans-serif;">@item.OrderStatus</div>
                            }
                            else if (item.OrderStatus == "Done")
                            {
                                <div class="badge bg-primary text-white rounded-pill" style="font-family: 'Quicksand', sans-serif;">@item.OrderStatus</div>
                            }
                            else if (item.OrderStatus == "Cancle")
                            {
                                <div class="badge bg-danger text-white rounded-pill" style="font-family: 'Quicksand', sans-serif;">@item.OrderStatus</div>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer.Name)
                        </td>
                        <td>
                            <a asp-page="./Accept" class="btn btn-success btn-sm" asp-route-id="@item.Id">Accept</a> |
                            <a asp-page="./Cancle" class="btn btn-danger btn-sm" asp-route-id="@item.Id">Cancel</a> |
                            <a asp-page="./Done" class="btn btn-info btn-sm" asp-route-id="@item.Id" style="color: white">Done</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div id="pagination-container"></div>
            
        </div>
        <!-- end all status -->
        <!-- processing status -->
        <div class="tab-pane fade" id="pills-processing" role="tabpanel" aria-labelledby="pills-processing-tab">
            <table class="table" style="background-color: white; border-radius: 10px">
                <thead>
                    <tr>
                        <th>
                            TotalPrice
                        </th>
                        <th>
                            CreateDate
                        </th>
                        <th>
                            ShippingAddress
                        </th>
                        <th>
                            OrderStatus
                        </th>
                        <th>
                            Customer
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="list-wrapper">
                    @foreach (var item in Model.Order)
                    {
                        <tr class="list-item">
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShippingAddress)
                            </td>
                            <td>
                                @if (item.OrderStatus == "Processing")
                                {
                                    <p class="btn btn-outline-warning">@item.OrderStatus</p>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.Name)
                            </td>
                            <td>
                                <a asp-page="./Accept" class="btn btn-success" asp-route-id="@item.Id">Accept</a> |
                                <a asp-page="./Cancle" class="btn btn-danger" asp-route-id="@item.Id">Cancel</a> |
                                <a asp-page="./Done" class="btn btn-info" asp-route-id="@item.Id" style="color: white">Done</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="pagination-container"></div>
        </div>
        <!-- end processing status -->
        <!-- accepted status -->
        <div class="tab-pane fade" id="pills-accepted" role="tabpanel" aria-labelledby="pills-accepted-tab">
            <table class="table" style="background-color: white; border-radius: 10px">
                <thead>
                    <tr>
                        <th>
                            TotalPrice
                        </th>
                        <th>
                            CreateDate
                        </th>
                        <th>
                            ShippingAddress
                        </th>
                        <th>
                            OrderStatus
                        </th>
                        <th>
                            Customer
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="list-wrapper">
                    @foreach (var item in Model.Order)
                    {
                        <tr class="list-item">
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShippingAddress)
                            </td>
                            <td>
                                @if (item.OrderStatus == "Accepted")
                                {
                                    <div class="badge bg-warning text-white rounded-pill" style="font-family: 'Quicksand', sans-serif;">@item.OrderStatus</div>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.Name)
                            </td>
                            <td>
                                <a asp-page="./Cancle" class="btn btn-danger disabled" asp-route-id="@item.Id">Cancel</a> |
                                <a asp-page="./Done" class="btn btn-info" asp-route-id="@item.Id" style="color: white">Done</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="pagination-container"></div>
        </div>
        <!-- end accepted status -->
        <!-- done status -->
        <div class="tab-pane fade" id="pills-done" role="tabpanel" aria-labelledby="pills-done-tab">
            <table class="table" style="background-color: white; border-radius: 10px">
                <thead>
                    <tr>
                        <th>
                            TotalPrice
                        </th>
                        <th>
                            CreateDate
                        </th>
                        <th>
                            ShippingAddress
                        </th>
                        <th>
                            OrderStatus
                        </th>
                        <th>
                            Customer
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="list-wrapper">
                    @foreach (var item in Model.Order)
                    {
                        <tr class="list-item">
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShippingAddress)
                            </td>
                            <td>
                                @if (item.OrderStatus == "Done")
                                {
                                    <div class="badge bg-primary text-white rounded-pill" style="font-family: 'Quicksand', sans-serif;">@item.OrderStatus</div>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.Name)
                            </td>
                            <td>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="pagination-container"></div>
        </div>
        <!-- end done status -->
        <!-- cancel status -->
        <div class="tab-pane fade" id="pills-cancle" role="tabpanel" aria-labelledby="pills-cancle-tab">
            <table class="table" style="background-color: white; border-radius: 10px">
                <thead>
                    <tr>
                        <th>
                            TotalPrice
                        </th>
                        <th>
                            CreateDate
                        </th>
                        <th>
                            ShippingAddress
                        </th>
                        <th>
                            OrderStatus
                        </th>
                        <th>
                            Customer
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="list-wrapper">
                    @foreach (var item in Model.Order)
                    {
                        <tr class="list-item">
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShippingAddress)
                            </td>
                            <td>
                                @if (item.OrderStatus == "Cancle")
                                {
                                    <div class="badge bg-danger text-white rounded-pill" style="font-family: 'Quicksand', sans-serif;">@item.OrderStatus</div>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.Name)
                            </td>
                            <td>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="pagination-container"></div>
        </div>
        <!-- end cancel status -->
    </div>
}
else
{
    Response.Redirect("/Authenticate/Login");
}