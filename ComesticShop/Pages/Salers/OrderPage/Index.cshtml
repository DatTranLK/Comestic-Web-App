@page
@model ComesticShop.Pages.Salers.OrderPage.IndexModel
@{
}
@if (@Model.Role == "2")
{
    <h1>Order Management</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table" style="background-color: white; border-radius: 10px">
    <thead>
        <tr>
            <th>
                TotalPrice
            </th>
            <th>
                CreateDate
            </th>
            <th>
                ShippingAddress
            </th>
            <th>
                OrderStatus
            </th>
            <th>
                Customer
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody class="list-wrapper">
@foreach (var item in Model.Order) {
        <tr class="list-item">
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingAddress)
            </td>
            <td>
                @if (item.OrderStatus == "Processing")
                    {
                        <p class="btn btn-outline-warning">@item.OrderStatus</p>
                    }
                    else if (item.OrderStatus == "Accepted")
                    {
                        <p class="btn btn-outline-success">@item.OrderStatus</p>
                    }
                    else if (item.OrderStatus == "Done")
                    {
                        <p class="btn btn-outline-info">@item.OrderStatus</p>
                    }
                    else if (item.OrderStatus == "Cancle")
                    {
                        <p class="btn btn-outline-danger">@item.OrderStatus</p>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                <a asp-page="./Accept" class="btn btn-success" asp-route-id="@item.Id">Accept</a> |
                <a asp-page="./Cancle" class="btn btn-danger" asp-route-id="@item.Id">Cancel</a> |
                <a asp-page="./Done" class="btn btn-info" asp-route-id="@item.Id" style="color: white">Done</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div id="pagination-container"></div>
   
}
else{
    Response.Redirect("/Authenticate/Login");
}