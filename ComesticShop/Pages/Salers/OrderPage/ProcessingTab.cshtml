@page
@model ComesticShop.Pages.Salers.OrderPage.ProcessingTabModel
@{
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/assets/css/all.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
@if (@Model.Role == "2" || @Model.Role == "1")
{
    <div class="white_box_tittle list_header">
        <h1>Order Management</h1>
        <div class="box_right d-flex lms_block">
            <div class="add_button ms-2">
                <a asp-page="/Salers/ProductPage/Index" asp-route-id="1" class="btn_1">Add New</a>
            </div>
        </div>
    </div>
    <br>
    <table id="example1" class="table display table-striped table-hover table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>ShippingAddress</th>
                <th>PaymentMethod</th>
                <th>TotalPrice</th>
                <th>CreateDate</th>
                <th>OrderStatus</th>
                <th>Action</th>
                <th></th>
            </tr>
        </thead>


        <tbody class="list-wrapper">
            @foreach (var item in Model.Order)
            {
                <tr class="list-item">
                    <td>@Html.DisplayFor(modelItem => item.Customer.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.ShippingAddress)</td>
                    <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                    <td>@((int)item.TotalPrice)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreateDate)</td>
                    <td>
                        @if (item.OrderStatus == "Processing")
                        {
                            <div class="badge bg-secondary text-white rounded-pill" style="font-family: 'Quicksand', sans-serif;">@item.OrderStatus</div>
                        }
                    </td>
                    <td>
                        <a asp-page="./Accept" class="btn btn-success btn-sm" asp-route-id="@item.Id">Accept</a> |
                        <a asp-page="./Cancle" class="btn btn-danger btn-sm" asp-route-id="@item.Id">Cancel</a>
                    </td>
                    <td>
                        <a asp-page="./OrderDetailPage" asp-route-id="@item.Id" style="color: #051922">Xem chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div id="pagination-container"></div>
}
else
{
    Response.Redirect("/Authenticate/Login");
}